<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#00000000"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="40dp" android:layout_gravity="center_horizontal"
        android:layout_height="40dp" android:background="#0000ff00"
         />

    <TextView
        android:id="@+id/textView1" android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content" android:layout_marginTop="5dp" android:textSize="10sp"
        android:layout_height="wrap_content" android:textColor="#454545"
        android:text="TextView" />

</LinearLayout>
